<div class="row">
    <div class="col-xs-3">


            <%= render 'dashboard/trends_nav' %>


    </div>



    <div class="col-xs-9">

    <div class="toolbar">
        <div class="btn-group chartType" ng-show="report_type=='vendor'">
            <button ng-click="updateChartNumber('1')" class="btn btn-default">
                <span class="glyphicon glyphicon-adjust"></span>
            </button>
            <button ng-click="updateChartNumber('2')" class="btn btn-default">
                <span class="glyphicon glyphicon-signal"></span>
            </button>
            <button ng-click="updateChartNumber('3')" class="btn btn-default">
                <span class="glyphicon glyphicon-align-left"></span>
            </button>


        </div>
    </div>

         <div ng-show="report_type=='vendor' && chart_number==1">

            <div google-chart chart="vendorChart1" style="{{cssStyle}}" on-ready="chartReady()"></div>

            <div google-chart chart="vendorChart1b" style="{{cssStyle}}" on-ready="chartReady()"></div>

         </div>

        <div ng-show="report_type=='vendor' && chart_number==2">
