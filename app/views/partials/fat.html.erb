        </div>

        <div ng-show="report_type=='vendor' && chart_number==3">
            <!-- <div google-chart chart="vendorChart3" style="{{cssStyle}}" on-ready="chartReady()"></div> -->
                <%= image_tag('flight_bar_charts.jpg') %>

        </div>


        <div ng-show="report_type=='price_breakdown' && chart_number==1" >Price Breakown Chart one
            <div google-chart chart="priceChart1" style="{{cssStyle}}" on-ready="chartReady()"></div>
        </div>

        <div ng-show="report_type=='price_breakdown' && chart_number==2">Price Breakown Chart two
        </div>

        <div ng-show="report_type=='hotspots' && chart_number==1" >
